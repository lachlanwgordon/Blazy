@page "/chat"
@inherits ChatBase

<h3>Chat</h3>
<p>Messages entered on this page will also appear in the Twitch Player on a transparent background</p>

<div class="container">
    <input type="text" id="name" class="form-control" @bind=@Name placeholder="Name..." />
    <input type="text" id="message" class="form-control" @bind=@Message onkeyup="@KeyUp" placeholder="Enter a message..."/>
    <input type="button" id="sendMessage" value="Send" class="btn btn-primary" onclick="@SendMessage" />
    <ul id="discussion">
        @foreach (var message in Messages)
        {
            <li>@message</li>
        }
    </ul>
</div>
